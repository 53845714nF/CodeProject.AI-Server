{
    "Logging": {
        "LogLevel": {
            "Default": "Warning",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.Hosting.Lifetime": "Warning",
            "CodeProject.SenseAI.API.Server": "Information"
        }
    },

    "AllowedHosts": "*",
    "ForceHttps": false,

    "UpdateCheckUrl":    "https://www.codeproject.com/ai/sense/version.aspx",
    "UpdateDownloadUrl": "https://www.codeproject.com/ai/sense/latest.aspx",

    "ErrLogAPIKey": "ed359c3a-8a77-4f23-8db3-d3eb5fac23d9",

    "BackendOptions": {
        "ResponseTimeout": "00:00:30",
        "CommandDequeueTimeout": "00:00:10",
        "MaxQueueLength": 10
    },

    "FrontEndOptions": {

        // "ROOT_DIR", the current working dir, will be determined at runtime
        "API_DIRNAME": "api", // We'll use this to search for the rootdir dynamically
        "MODULES_DIR": "%ROOT_DIR%\\src\\AnalysisLayer",

        "BackendEnvironmentVariables": {

            // Shared values
            "ERRLOG_APIKEY": "ed359c3a-8a77-4f23-8db3-d3eb5fac23d9",

            // For the DeepStack module. These need to match what's in the installation
            "APPDIR": "%MODULES_DIR%\\DeepStack\\intelligencelayer",
            "DATA_DIR": "%MODULES_DIR%\\DeepStack\\datastore",
            "TEMP_PATH": "%MODULES_DIR%\\DeepStack\\tempstore",
            "MODELS_DIR": "%MODULES_DIR%\\DeepStack\\assets",
            "PROFILE": "windows_native", // Need to enable this to be set at dev environment install time
            "CUDA_MODE": "False",
            "VISION-FACE": false,
            "VISION-DETECTION": false,
            "VISION-SCENE": false,
            "VISION-ALL": false,
            "PORT": 5000,

            // For the .NET YOLO Module...
            "CPSENSEAI-YOLO": false
        },

        /*
         * Please note we do not currently support the concept of shared Python settings. If a
         * process requires python you will need to indicate where, exactly, the interpreter lives
         * to ensure you are specifying the correct version. All Python interpreters should be
         * contained within virtual environments.
         */
      "StartupProcesses": [
        {
            "Name": "Face Proccessing",
            "Activate": true,
            "EnableFlag": "VISION-FACE",
            "Queue": "face_queue",
            "Command": "%MODULES_DIR%\\DeepStack\\venv\\scripts\\Python.exe",
            "Args": "%MODULES_DIR%\\DeepStack\\intelligencelayer\\face.py"
        },
        /* We've replaced this with the SenseAI Object Detection (below).
        {
            "Name": "Object Detection",
            "Activate": false,
            "EnableFlag": "VISION-DETECTION",
            "Queue": "detection_queue",
            "Command": "%MODULES_DIR%\\DeepStack\\venv\\scripts\\Python.exe",
            "Args": "%MODULES_DIR%\\DeepStack\\intelligencelayer\\detection.py"
        },
        */
        {
            "Name": "Scene Classification",
            "Activate": true,
            "EnableFlag": "VISION-SCENE",
            "Queue": "scene_queue",
            "Command": "%MODULES_DIR%\\DeepStack\\venv\\scripts\\Python.exe",
            "Args": "%MODULES_DIR%\\DeepStack\\intelligencelayer\\scene.py"
        },
        {
            "Name": "SenseAI Object Detection",
            "Activate": true,
            "EnableFlag": "CPSENSEAI-YOLO",
            "Queue": "detection_queue",
            "Command": "%MODULES_DIR%\\CodeProject.SenseAI.AnalysisLayer.Yolo\\CodeProject.SenseAI.AnalysisLayer.Yolo.exe"
        }
      ]
    }
}
