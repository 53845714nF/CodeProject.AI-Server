{
    "Logging": {
        "LogLevel": {
            "Default": "Warning",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.Hosting.Lifetime": "Warning",
            "CodeProject.SenseAI.API.Server": "Information"
        }
    },

    "VersionInfo": {
        "Major": 1,
        "Minor": 4,
        "Build": 0,
        "PreRelease": "Beta1"
    },

    "AllowedHosts": "*",
    "ForceHttps": false,

    "BackendOptions": {
        "ResponseTimeout": "00:00:30",
        "CommandDequeueTimeout": "00:00:10",
        "MaxQueueLength": 10
    },

    "FrontEndOptions": {
        // Critical that we get this value from the settings created at install time
        // "ROOT_DIR": "..\\..\\..\\..",
        "API_DIRNAME": "api", // We'll use this to search for the rootdir dynamically
        "APP_ROOT": "%ROOT_DIR%\\src\\AnalysisLayer\\DeepStack",
        "PYTHON_DIR": "%APP_ROOT%\\venv\\Scripts",

        "StartupProcesses": [
            {
                "Name": "Face Proccessing",
                "EnableFlag": "VISION-FACE",
                "Queue": "face_queue",
                "Command": "%PYTHON_DIR%\\Python.exe",
                "Args": "%APP_ROOT%\\intelligencelayer\\face.py"
            },
            {
                "Name": "Object Detection",
                "EnableFlag": "VISION-DETECTION",
                "Queue": "detection_queue",
                "Command": "%PYTHON_DIR%\\Python.exe",
                "Args": "%APP_ROOT%\\intelligencelayer\\detection.py"
            },
            {
                "Name": "Scene Classification",
                "EnableFlag": "VISION-SCENE",
                "Queue": "scene_queue",
                "Command": "%PYTHON_DIR%\\Python.exe",
                "Args": "%APP_ROOT%\\intelligencelayer\\scene.py"
            }
            /*,
        {
            "Name": "All Vision Processing",
            "EnableFlag": "VISION-ALL",
            "Queue": "scene_queue,face_queue,detection_queue",
            "Command": "%PYTHON_DIR%\\Python.exe",
            "Args": "%APP_ROOT%\\intelligencelayer\\runall.py"
        }
        */
        ]
    },

    // Backend Environment Variables =============================
    "APPDIR": "%APP_ROOT%\\intelligencelayer",
    "DATA_DIR": "%APP_ROOT%\\datastore",
    "TEMP_PATH": "%APP_ROOT%\\tempstore",
    "MODELS_DIR": "%APP_ROOT%\\assets",
    "PROFILE": "windows_native", // Need to enable this to be set at dev environment install time
    "CUDA_MODE": "False",
    "VISION-FACE": false,
    "VISION-DETECTION": false,
    "VISION-SCENE": false,
    "VISION-ALL": false,
    "PORT": 5000
    // ===========================================================
}
