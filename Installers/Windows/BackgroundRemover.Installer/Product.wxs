<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

	<?include ..\SharedProperties.wxi ?>

	<Product Id="*"
			 Name="CodeProject SenseAI Background Remover Module"
			 Language="1033"
			 Version="$(var.BuildVersion)"
			 Manufacturer="CodeProject"
			 UpgradeCode="235a2a45-c872-4b62-a331-99284338ac29">

		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

		<MediaTemplate EmbedCab="yes" />

		<Feature Id="BackgroundRemoverAIFeature" Title="Text Summary Module" Level="1">
			<ComponentGroupRef Id="BackgroundRemoverFilesComponentGroup" />
		</Feature>

		<!-- Each module that uses Python will need to include a custom action to install their 
			packages into the venv which will be Python37VenvFolder -->
		<CustomAction Id="PipPackagesCmd"
					  Directory="BackgroundRemoverInstallFolder"
					  ExeCommand='"[Python39VenvFolder]scripts\pip.exe" install -r "[BackgroundRemoverInstallFolder]requirements.txt"'
					  Execute='deferred'
					  Return='ignore'
					  Impersonate='yes'/>

		<InstallExecuteSequence>
			<Custom Action='PipPackagesCmd' Before='InstallFinalize'>NOT Installed</Custom>
		</InstallExecuteSequence>

		<UI>
			<ProgressText Action='PipPackagesCmd'>Installing required Python Packages ... (This will take several minutes)</ProgressText>
		</UI>

	</Product>
	<?include ..\SharedDirectories.wxi ?>
</Wix>